{
  "name": "lookml-language-server",
  "description": "LookML Language Server for Visual Studio Code",
  "author": "rileylnapier@gmail.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/lkrdev/lookml-language-server"
  },
  "publisher": "lkr-dev",
  "license": "MIT",
  "version": "0.0.0",
  "categories": [],
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./client/out/extension",
  "contributes": {
    "commands": [
      {
        "command": "looker.authenticate",
        "title": "Authenticate",
        "category": "Looker"
      },
      {
        "command": "looker.resetToRemote",
        "title": "Reset to Remote",
        "category": "Looker"
      },
      {
        "command": "looker.reauthenticate",
        "title": "Reauthenticate",
        "category": "Looker"
      },
      {
        "command": "looker.selectProject",
        "title": "Select Project",
        "category": "Looker"
      },
      {
        "command": "looker.syncBranches",
        "title": "Sync Branches",
        "category": "Looker"
      },
      {
        "command": "looker.openExplore",
        "title": "Open Explore",
        "category": "Looker"
      }
    ],
    "configuration": {
      "title": "Looker",
      "properties": {
        "looker.credentials": {
          "type": "object",
          "default": {
            "base_url": "",
            "client_id": "",
            "client_secret": ""
          },
          "description": "Looker API credentials"
        },
        "looker.projectName": {
          "type": "string",
          "default": "",
          "description": "Looker project name"
        }
      }
    },
    "languages": [
      {
        "id": "lookml",
        "aliases": [
          "LookML",
          "lookml"
        ],
        "extensions": [
          ".lkml",
          ".lookml",
          ".model.lkml",
          ".view.lkml",
          ".explore.lkml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "lookml",
        "scopeName": "source.lookml",
        "path": "./syntaxes/lookml.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "LookML",
        "uiTheme": "vs-dark",
        "path": "./syntaxes/lookml.tmTheme.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "install:client": "cd client && npm install",
    "install:server": "cd server && npm install",
    "compile": "npm run install:client && npm run install:server && tsc --build",
    "watch": "tsc --build --watch",
    "lint": "eslint src --ext ts",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.30",
    "ts-jest": "^29.3.2",
    "typescript": "^5.2.2",
    "vscode": "^1.1.37"
  },
  "dependencies": {}
}
