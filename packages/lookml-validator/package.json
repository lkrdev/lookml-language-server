{
    "name": "@lkr-dev/lookml-validator",
    "version": "0.0.0",
    "description": "Validate LookML workspaces and return diagnostics programmatically. Designed for use in npm workspaces with lookml-language-server.",
    "main": "dist/index.js",
    "bin": {
        "lookml-validator": "./dist/cli.js"
    },
    "types": "dist/index.d.ts",
    "readme": "README.md",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/lkrdev/lookml-language-server.git"
    },
    "publisher": "lkr-dev",
    "dependencies": {
        "@lkr-dev/lookml-language-server": "*"
    },
    "devDependencies": {
        "@types/node": "^20.17.30",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.2",
        "typescript": "^5.9.3"
    },
    "scripts": {
        "build": "tsc -b --clean && tsc -b"
    },
    "license": "MIT",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./types": {
            "types": "./dist/types.d.ts",
            "default": "./dist/types.js"
        }
    }
}
